#!/bin/bash

# Dragon Server Credentials Display
# Shows saved credentials for monitoring services

CREDENTIALS_FILE="/var/www/containers/monitoring/.credentials"

# Colors
CYAN='\033[0;36m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo ""
echo -e "${CYAN}═══════════════════════════════════════════════════════════════${NC}"
echo -e "${CYAN}                  Dragon Server Credentials                    ${NC}"
echo -e "${CYAN}═══════════════════════════════════════════════════════════════${NC}"
echo ""

if [ -f "$CREDENTIALS_FILE" ]; then
    echo -e "${GREEN}Monitoring Stack Credentials:${NC}"
    echo ""
    cat "$CREDENTIALS_FILE" | grep -v "^#" | grep -v "^$"
    echo ""
else
    echo -e "${YELLOW}Monitoring credentials not found.${NC}"
    echo "The monitoring stack may not be configured yet."
    echo ""
    echo "Run first-boot setup or check:"
    echo "  $CREDENTIALS_FILE"
    echo ""
fi

# Show domain if configured
if [ -f "/var/lib/dragon/.domain" ]; then
    DOMAIN=$(cat /var/lib/dragon/.domain)
    echo -e "${CYAN}═══════════════════════════════════════════════════════════════${NC}"
    echo -e "${GREEN}Configured Domain:${NC} $DOMAIN"
    echo ""
    echo -e "${GREEN}DNS Requirements:${NC}"
    echo "  Create CNAME records pointing to your domain:"
    echo "    grafana.$DOMAIN -> $DOMAIN"
    echo "    metrics.$DOMAIN -> $DOMAIN"
    echo ""
fi

echo -e "${CYAN}═══════════════════════════════════════════════════════════════${NC}"
echo ""
